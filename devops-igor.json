{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",

  "artifactsBaseUrl": {
    "type": "string"
  },
  "projectName": {
    "type": "string"
  },
  "adminName": {
    "type": "string"
  },
  "adminAuthType": {
    "type": "string"
  },
  "adminPwd": {
    "type": "securestring"
  },
  "adminPublicKey": {
    "type": "string"
  },
  "packageVersion": {
    "type": "string"
  },
  "nodeCount": {
    "type": "int"
  },
  "instanceType": {
    "type": "string"
  },
  "diskType": {
    "type": "string"
  },
  "licenseType": {
    "type": "string"
  },
  "diskSize":  {
    "type": "int"
  },
  "diskCount": {
    "type": "int"
  },
  "publicAccessCIDR": {
    "type": "string"
  },
  "vnetName": {
    "type": "string"
  },
  "vnetResourceGroup": {
    "type": "string"
  },
  "vnetAddressPrefix": {
    "type": "string"
  },
  "vnetNewOrExisting": {
    "type": "string"
  },
  "vnetPrivateSubnetName": {
    "type": "string"
  },
  "vnetPrivateSubnetAddressPrefix": {
    "type": "string"
  },

  "vnetPublicSubnetName": {
    "type": "string"
  },
  "vnetPublicSubnetAddressPrefix": {
    "type": "string"
  },
  "parameters": {
    "providerID": {
      "type": "string"
    },
    "virtualNetworkName": {
      "type": "string"
    },
    "addressPrefix": {
      "type": "string"
    },
    "subnetNamePublic": {
      "type": "string"
    },
    "subnetPrefixPublic": {
      "type": "string"
    },
    "subnetNamePrivate": {
      "type": "string"
    },
    "subnetPrefixPrivate": {
      "type": "string"
    },
    "clusterName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    }
  },
  "variables": {
    "networkApiVersion": "2017-09-01"
  },
  "resources": [
    {
      "apiVersion": "[variables('networkApiVersion')]",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('virtualNetworkName')]",
      "location": "[parameters('location')]",
      "tags": {
        "provider": "[toUpper(parameters('providerID'))]",
        "displayName": "Virtual Network",
        "cluster": "[parameters('clusterName')]"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('addressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('subnetNamePublic')]",
            "properties": {
              "addressPrefix": "[parameters('subnetPrefixPublic')]"
            }
          },
          {
            "name": "[parameters('subnetNamePrivate')]",
            "properties": {
              "addressPrefix": "[parameters('subnetPrefixPrivate')]"
            }
          }
        ]
      }
    }
  ]
}
